<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    <RelativeLayout
        android:id="@+id/top_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/ll_topmain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">


            <Button
                android:id="@+id/test_load"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimary"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/arrowright"
                android:hint="Select Test"
                android:inputType="number"
                android:paddingLeft="16dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:visibility="visible" />


            <Button
                android:id="@+id/class_photos"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimary"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/arrowright"
                android:hint="Select Class"
                android:paddingLeft="16dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:visibility="visible" />

            <Button
                android:id="@+id/class_section"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimary"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/arrowright"
                android:hint="Select Section"
                android:paddingLeft="16dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:visibility="visible" />

            <Button
                android:id="@+id/student_name"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|center_horizontal"
                android:layout_margin="12dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimary"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/arrowright"
                android:hint="Select Student Name"
                android:paddingLeft="16dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:visibility="visible" />



            <EditText
                android:id="@+id/ettotal_marks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="13dp"
                android:autoLink="all"
                android:gravity="top|left"
                android:hint="Total Marks"
                android:inputType="number"
                android:lines="5"
                android:maxLength="4"
                android:maxLines="10"
                android:minLines="1"
                android:scrollbars="vertical" />

            <EditText
                android:id="@+id/etoptainmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="13dp"
                android:autoLink="all"
                android:gravity="top|left"
                android:hint="Optained Marks"
                android:inputType="number"
                android:lines="1"
                android:maxLength="4"
                android:maxLines="10"
                android:minLines="1"
                android:scrollbars="vertical" />

            <EditText
                android:id="@+id/etgrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="13dp"
                android:autoLink="all"
                android:gravity="top|left"
                android:hint="Enter grade"
                android:inputType="textMultiLine|textCapSentences"
                android:lines="5"
                android:maxLength="4"
                android:maxLines="10"
                android:minLines="1"
                android:scrollbars="vertical" />

            <Button
                android:id="@+id/submit_result"
                android:layout_width="200sp"
                android:layout_height="35dp"
                android:layout_alignLeft="@+id/select_submit"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/select_submit"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="40dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="Submit"
                android:textAllCaps="false"

                android:textColor="@color/white"
                android:visibility="visible" />



        </LinearLayout>


    </RelativeLayout>

</ScrollView>
</RelativeLayout>