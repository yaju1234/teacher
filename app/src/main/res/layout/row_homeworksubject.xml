<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:minHeight="90dp"
             android:paddingLeft="5dp"
             android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:id="@+id/v1"
                android:layout_width="70dp"
                android:layout_height="90dp">
            <TextView

                android:layout_marginLeft="0dp"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/circle"
                android:layout_marginTop="10dp"
                android:id="@+id/subject_firstletter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="H"
                android:textSize="35dp"
                android:layout_marginBottom="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/v1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView

                android:id="@+id/subject_name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENGLISH"
                android:textSize="16sp"
                android:textColor="@color/news_body"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/homework_heading"
                android:layout_below="@id/subject_name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tense"
                android:textSize="16sp"
                android:textColor="@color/dot_light_screen1"
                android:layout_marginTop="0dp"/>
            <TextView
                android:id="@+id/homework_detail"
                android:layout_below="@id/homework_heading"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tense is very useful"
                android:textSize="14sp"
                android:textColor="@color/news_headerfrom"
                android:layout_marginTop="0dp"/>
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

