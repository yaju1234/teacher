<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/st_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:enabled="true"
                        android:hint="Event Name"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLength="140"
                        android:padding="12dip"
                        android:textAppearance="?android:textAppearanceSmall" />

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/date_pic"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:layout_weight="0.5"
                    android:background="@color/colorPrimary"
                    android:drawableLeft="@drawable/calender"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/arrowright"
                    android:hint="Select Date"
                    android:paddingLeft="16dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/class_photos"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:layout_weight="0.5"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:hint="Select Class"
                    android:textAllCaps="false"
                    android:textColorHint="@color/white"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/arrowright"
                    android:paddingLeft="16dp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/class_section"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:layout_weight="0.5"
                    android:background="@color/colorPrimary"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/arrowright"
                    android:hint="Select Section"
                    android:paddingLeft="16dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:visibility="visible" />


                <Button
                    android:id="@+id/select_image"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="12dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="0 Photo Selected"
                    android:drawableRight="@drawable/arrowright"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/select_submit"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/select_image"
                    android:layout_alignStart="@+id/select_image"
                    android:layout_below="@+id/select_image"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Submit"
                    android:textColor="@color/white" />


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>