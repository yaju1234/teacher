<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:id="@+id/top_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/ll_topmain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">




                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_hw_heading"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="3dp"
                        android:autoLink="all"
                        android:gravity="top|left"
                        android:hint="Homework Heading"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine|textCapSentences"
                        android:lines="5"
                        android:maxLines="10"
                        android:minLines="1"
                        android:padding="8dp"
                        android:scrollbars="vertical" />
                </android.support.design.widget.TextInputLayout>



                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_hw_desc"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="3dp"
                        android:autoLink="all"
                        android:gravity="top|left"
                        android:hint="Homework Description "
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine|textCapSentences"
                        android:lines="5"
                        android:maxLines="10"
                        android:minLines="1"
                        android:padding="8dp"
                        android:scrollbars="vertical" />

                </android.support.design.widget.TextInputLayout>


                <Button
                    android:id="@+id/class_photos"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:layout_weight="0.5"
                    android:background="@color/colorPrimary"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/arrowright"
                    android:hint="Select Class"
                    android:paddingLeft="16dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/class_section"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:layout_weight="0.5"
                    android:background="@color/colorPrimary"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/arrowright"
                    android:hint="Select Section"
                    android:paddingLeft="16dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/subject"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:layout_weight="0.5"
                    android:background="@color/colorPrimary"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/arrowright"
                    android:hint="Select Subject"
                    android:paddingLeft="16dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:visibility="visible" />


                <Button
                    android:id="@+id/select_date"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:background="@color/colorPrimary"
                    android:drawableLeft="@drawable/calender"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/arrowright"
                    android:hint="Select Date"
                    android:paddingLeft="20dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp"
                    android:visibility="visible" />


                <Button
                    android:id="@+id/select_submit"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/ll_topmain"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:layout_marginBottom="25dp"
                    android:paddingLeft="20dp"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />


            </LinearLayout>


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
